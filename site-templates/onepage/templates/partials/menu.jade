if config.menu
  - var n = 0
  .navbar-wrapper
    .container
      .navbar.navbar-inverse.navbar-static-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/')= config.siteName
          .navbar-collapse.collapse
            ul.nav.navbar-nav
              each val, index in config.menu
                if n==0
                  li.active
                    a(href=val)= index
                else
                  li
                    a(href=val)= index
                - n++

  img.img-responsive(src=config.imagemenu.href, alt=config.imagemenu.alt)
